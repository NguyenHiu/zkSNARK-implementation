doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h1 main view 
        h2 welcome, 
        p your address: #{address}
        p your private key: #{privateKey}
        h3 Deposit 
        form(action="/main", method="POST")
            div 
                label(for="toPublicKey") To Public Key:
                input(name="toPublicKey")
            br
            div 
                label(from="amount") Amount: 
                input(name="amount")
            br
            button(type="submit") Submit Deposit Request
        if coordinatorAddress === address
            h1 You are Coordinator! You can update state!
            p Note; u should process register first to update new account into account tree
            form(action="/process_deposit_register", method="POST")
                button(type="submit") Process Deposit Register
            form(action="/process_deposit_existence", method="POST")
                button(type="submit") Process Deposit Existence
            h1 debug area
            h2 deposit register
            form(action="/debug_deposit_register", method="POST")
                button(type="submit") access to debug area ? 
            form(action="/debug_process_deposit_register", method="POST")
                button(type="submit") process ?
            h2 deposit existence
            form(action="/debug_deposit_existence", method="POST")
                button(type="submit") access to debug area ? 
            form(action="/debug_process_deposit_existence", method="POST")
                button(type="submit") process ?
        else
            h1 You are not Coordinator!
        h2 Account Tree
        form(action="/accountTree", method="GET")
            button(type="submit") Wanna see account tree ?
